# use -i to in-place alter the file content matched
sed -i 's/oldStr/newStr/g' filename

# use '/match_string/{s/oldStr/newStr/g}'
sed -i '/Google/{s/^/#&/}' filename

#delete n characters at the end of each line
sed 's/\(.\)\{n\}$//' file 

# understand the real doc of sed 
# -n surpress automatically print pattern space
sed -n 1,4a\kljljkljlk overview.txt

#add newline in the specific line without modifying the original line
sed -i add1,add2 a\text filename


